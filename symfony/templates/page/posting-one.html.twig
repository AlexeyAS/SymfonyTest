{% extends 'base.html.twig' %}

{% block title %}
{{data.name}}
{% endblock %}

{% block content %}
<h1>{{data.name}}</h1>
<div class="alert alert-info">
    <h3>{{data.subject}}</h3>
    <p>{{data.message}}</p>
    <p>{{data.email}}</p>
    <p><small>создан: {{ data.createdAt}}</small></p>
    {% if data.createdAt != data.updatedAt %}
    <p><small>обновлён: {{ data.updatedAt}}</small></p>
    {% endif %}
    <a href="{{ path('posting-update', {id:data.id}) }}"><button class="btn btn-warning">Редактировать</button></a>
    <a href="{{ path('posting-delete', {id:data.id}) }}"><button class="btn btn-danger">Удалить</button></a>
</div>
{% endblock %}