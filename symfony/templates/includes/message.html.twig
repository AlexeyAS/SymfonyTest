{% if postingForm is defined %}
{% if form_errors(postingForm.subject) or form_errors(postingForm.message) %}
    <div class="alert alert-danger">
        <ul>
            {% if form_errors(postingForm.subject) %}
            <li>{{ form_errors(postingForm.subject) }}</li>
            {% endif %}
            {% if form_errors(postingForm.message) %}
            <li>{{ form_errors(postingForm.message) }}</li>
            {% endif %}
        </ul>
    </div>
{% endif %}
{% endif %}

{% for errors in app.flashes('errors') %}
    <div class="alert alert-danger">
        <ul>
            {% for error in errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    </div>
{% endfor %}

 {% for success in app.flashes('success') %}
     <div class="alert alert-success">
         {{ success }}
     </div>
 {% endfor %}